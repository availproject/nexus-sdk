{
  "name": "nexus-sdk-monorepo",
  "version": "0.1.3-dev.5",
  "private": true,
  "description": "Nexus SDK monorepo - cross-chain transactions with minimal friction",
  "scripts": {
    "build:commons": "pnpm -F @nexus/commons build",
    "build:core": "pnpm -F @nexus/commons build && pnpm -F @nexus/core build",
    "build:widgets": "pnpm -F @nexus/commons build && pnpm -F @nexus/widgets build",
    "build": "pnpm run build:core && pnpm run build:widgets",
    "dev:core": "pnpm -F @nexus/core dev",
    "dev:widgets": "pnpm -F @nexus/widgets dev",
    "dev": "pnpm run dev:core & pnpm run dev:widgets",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "typecheck": "pnpm -r typecheck",
    "clean": "cd packages/widgets && rimraf dist && cd packages/core && rimraf dist && cd packages/commons && rimraf dist",
    "release:core": "./scripts/release-core.sh",
    "release:core:dev": "./scripts/release-core.sh dev",
    "release:core:prod": "./scripts/release-core.sh prod",
    "release:widgets": "./scripts/release-widgets.sh",
    "release:widgets:dev": "./scripts/release-widgets.sh dev",
    "release:widgets:prod": "./scripts/release-widgets.sh prod",
    "release": "./scripts/release-all.sh",
    "release:dev": "./scripts/release-all.sh dev",
    "release:prod": "./scripts/release-all.sh prod"
  },
  "keywords": [
    "nexus",
    "sdk",
    "blockchain",
    "bridge",
    "swap",
    "web3",
    "chain",
    "abstraction",
    "intent",
    "unified",
    "balance",
    "sdk"
  ],
  "author": "decocereus<amartya@availproject.co>",
  "license": "Apache v2",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}
