{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@nexus/commons": ["../commons/index.ts"],
      "@nexus/commons/*": ["../commons/*"],
      "@nexus/core": ["../core/index.ts"],
      "@nexus/core/*": ["../core/*"],
      "sdk": ["../core/sdk/index.ts"],
      "sdk/*": ["../core/sdk/*"],
      "adapters/*": ["../core/adapters/*"],
      "integrations/*": ["../core/integrations/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
